1) Launch instance as usual just note it should be t2.medium and paste this script
#!/bin/bash
sudo apt-get update -y
sudo apt-get install apt-transport-https ca-certificates curl gnupg-agent software-properties-common -y
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable"
sudo apt-get install docker-ce docker-ce-cli containerd.io -y

2) sudo apt update && sudo apt upgrade -y

3) sudo apt install -y curl wget apt-transport-https ca-certificates gnupg lsb-release conntrack

4) sudo apt install -y docker.io

5) sudo usermod -aG docker $USER
# (Then logout and login again or run `newgrp docker`)

6) curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64

7) sudo install minikube-linux-amd64 /usr/local/bin/minikube

8) curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
9) chmod +x kubectl
10) sudo mv kubectl /usr/local/bin/

11) minikube start --driver=docker
12) minikube status
13) kubectl get nodes

14) kubectl config view
